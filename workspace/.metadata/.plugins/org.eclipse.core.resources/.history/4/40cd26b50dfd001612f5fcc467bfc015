package fr.ece.bernoux.lab5JavaFX.Exercice2.View;

import fr.ece.bernoux.lab5JavaFX.Exercice2.Controller.Controller;
import fr.ece.bernoux.lab5JavaFX.Exercice2.Model.Model;

public abstract class AbstractView implements View {
	//Final because it will not change
	private Controller controller;
	private Model model;
	
	
	public AbstractView(Model model) {
		super();
		this.model = model;
	}

/**
 * This method is declare in protected final because only this class or children can getModel.
 * It protects the MVC structure
 */

	protected final Model getModel (){
		return this.model;
	}

	protected final Controller getController() {
		return this.controller;
	}
	

	public void setController(Controller controller) {
		this.controller = controller;
	}
	
}
