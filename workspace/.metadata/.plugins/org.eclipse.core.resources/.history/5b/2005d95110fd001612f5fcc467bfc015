package fr.ece.bernoux.lab5JavaFX.Exercice2.View;

import java.util.ArrayList;
import java.util.List;
import java.util.Observable;

import javax.swing.SwingWorker;

import fr.ece.bernoux.lab5JavaFX.Exercice2.Model.Model;
import javafx.stage.Stage;

/**
 * @author Etienne Bernoux
 */
public class CLI extends AbstractView {

    public CLI(Model model) {
		super(model);
	}

	public void update(Observable o, Object arg) {
        new SwingWorker<List<String>,String>() {

            List<String> users = new ArrayList<>();

            @Override
            protected List<String> doInBackground() throws Exception {
                String[] data =(String[]) arg;
                int index = 0;
                while (index < data.length && ! isCancelled()) {
                    users.add(data[index]);
                    publish((data[index]));
                    index++;
                }
                return users;
            }

            @Override
            protected void process(List<String> chunks) {
                for (String data : chunks) {
                    System.out.println(data);
                }
            }

            @Override
            protected void done() {
                System.out.println("---");
            }

        }.execute();
    }

	@Override
	public void start(String[] args) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void start(Stage primaryStage) throws Exception {
		// TODO Auto-generated method stub
		
	}





}